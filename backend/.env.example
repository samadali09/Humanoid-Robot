# Qdrant Configuration
QDRANT_URL=https://your-cluster.qdrant.io:6333
QDRANT_API_KEY=your-qdrant-api-key-here
QDRANT_COLLECTION=book_content

# Cohere Configuration (for embeddings)
COHERE_API_KEY=your-cohere-api-key-here

# OpenAI Configuration (for LLM chat, personalization, translation)
OPENAI_API_KEY=your-openai-api-key-here

# PostgreSQL Database (for auth and caching)
DATABASE_URL=postgresql://user:password@localhost:5432/ragchatbot

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Book Content Path (relative to backend/)
BOOK_DOCS_PATH=../docs

# Admin API Key (for /ingest endpoint)
ADMIN_API_KEY=your-secure-admin-key-here

# Session Configuration
SESSION_SECRET=your-secret-key-for-jwt-signing
SESSION_EXPIRY_HOURS=168

# Cache TTL (in seconds)
PERSONALIZATION_TTL=3600
TRANSLATION_TTL=86400
